<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.newsrecommendationsystem.user.SignUp">
    <children>
        <!-- Register Label -->
        <Label layoutX="36.0" layoutY="21.0" text="Register">
            <font>
                <Font size="28.0" />
            </font>
        </Label>

        <!-- User Information Fields -->
        <TextField fx:id="userName" layoutX="36.0" layoutY="111.0" prefHeight="26.0" prefWidth="194.0" promptText="User Name" />
        <TextField fx:id="email" layoutX="36.0" layoutY="149.0" prefHeight="26.0" prefWidth="194.0" promptText="Email" />
        <PasswordField fx:id="password" layoutX="36.0" layoutY="188.0" prefHeight="26.0" prefWidth="194.0" promptText="Password" />
        <PasswordField fx:id="confirmPassword" layoutX="36.0" layoutY="227.0" prefHeight="26.0" prefWidth="194.0" promptText="Confirm Password" />

        <!-- News Categories Multi-Select Drop-Down -->
        <Label layoutX="302.0" layoutY="107.0" text="News Categories" />
        <MenuButton fx:id="newsCategoriesMenu" layoutX="301.0" layoutY="128.0" prefWidth="200.0" text="Select News Categories" />

        <!-- Content Type Preferences Multi-Select Drop-Down -->
        <Label layoutX="302.0" layoutY="169.0" text="Content Type Preferences" />
        <MenuButton fx:id="contentTypePreferencesMenu" layoutX="301.0" layoutY="191.0" prefWidth="200.0" text="Select Content Preferences" />

        <!-- Sign In Button -->
        <Button fx:id="signInButton" layoutX="107.0" layoutY="271.0" onAction="#signInButton" text="Sign Up" />

        <!-- Login Link -->
        <Text fx:id="loginLink" layoutX="37.0" layoutY="337.0" text="Already have an account? " />
        <Text layoutX="191.0" layoutY="337.0" onMouseClicked="#loginLink" text="Login" underline="true" />

    </children>
</AnchorPane>
