<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.newsrecommendationsystem.SignUp">
    <children>
        <!-- Register Label -->
        <Label layoutX="36.0" layoutY="21.0" text="Register">
            <font>
                <Font size="28.0" />
            </font>
        </Label>

        <!-- User Information Fields -->
        <TextField fx:id="userName" layoutX="36.0" layoutY="111.0" prefHeight="26.0" prefWidth="194.0" promptText="User Name" />
        <TextField fx:id="email" layoutX="36.0" layoutY="149.0" prefHeight="26.0" prefWidth="194.0" promptText="Email" />
        <PasswordField fx:id="password" layoutX="36.0" layoutY="188.0" prefHeight="26.0" prefWidth="194.0" promptText="Password" />
        <PasswordField fx:id="confirmPassword" layoutX="36.0" layoutY="227.0" prefHeight="26.0" prefWidth="194.0" promptText="Confirm Password" />

        <!-- News Categories Multi-Select ComboBox -->
        <Label layoutX="302.0" layoutY="107.0" text="News Categories" />
        <ComboBox fx:id="newsCategories" layoutX="301.0" layoutY="128.0" prefWidth="200.0" promptText="Select News Categories" />

        <!-- Content Type Preferences Multi-Select ComboBox -->
        <Label layoutX="302.0" layoutY="169.0" text="Content Type Preferences" />
        <ComboBox fx:id="contentTypePreferences" layoutX="301.0" layoutY="191.0" prefWidth="200.0" promptText="Select Content Type" />

        <!-- Sign In Button -->
        <Button fx:id="signInButton" layoutX="107.0" layoutY="271.0" text="Sign in" onAction="#signInButton" />

        <!-- Login Link -->
        <Text fx:id="loginLink" layoutX="37.0" layoutY="337.0" text="Already have an account? " />
        <Text layoutX="178.0" layoutY="337.0" text="Login" underline="true" onMouseClicked="#loginLink" />
    </children>
</AnchorPane>
