<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.newsrecommendationsystem.Onboarding"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <!-- Title Text -->
        <Text layoutX="200.0" layoutY="50.0" text="Select Login Type">
            <font>
                <Font size="24.0" />
            </font>
        </Text>

        <!-- Login as User Section -->
        <ImageView layoutX="100.0" layoutY="100.0" fitWidth="80.0" fitHeight="80.0">
            <image>
                <Image url="@user_icon.png" />
            </image>
        </ImageView>
        <Button layoutX="90.0" layoutY="200.0" text="Login as User" onAction="#handleUserLogin"/>

        <!-- Login as Administrator Section -->
        <ImageView layoutX="400.0" layoutY="100.0" fitWidth="80.0" fitHeight="80.0">
            <image>
                <Image url="@admin_icon.png" />
            </image>
        </ImageView>
        <Button layoutX="390.0" layoutY="200.0" text="Login as Administrator" onAction="#handleAdminLogin"/>

    </children>
</AnchorPane>
